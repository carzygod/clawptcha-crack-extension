{
  "manifest_version": 3,
  "name": "Clawptcha Agent Verifier",
  "version": "0.1.0",
  "description": "Bridge Clawptcha reverse CAPTCHAs to an LLM/agent and auto-submit answers when allowed.",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://clawptcha.com/*",
    "https://demo-ai.copypaste.hk/*"
  ],
  "action": {
    "default_title": "Clawptcha Agent Verifier",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://clawptcha.com/*"],
      "js": ["content-script.js"]
    }
  ]
}
